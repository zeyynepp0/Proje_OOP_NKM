@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="text-center mb-4">Müşteri Güncelle</h2>

            <form method="post" class="form-horizontal">

                <div class="form-group row">
                    @Html.LabelFor(x => x.Id, "Müşteri ID", new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", placeholder = "Müşteri ID" })
                        @Html.ValidationMessageFor(x => x.Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(x => x.Name, "Müşteri Adı", new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Name,  new { @class = "form-control", placeholder = "Müşteri Adı" })
                        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(x => x.City, "Müşteri Şehri", new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control", placeholder = "Müşteri Şehri" })
                        @Html.ValidationMessageFor(x => x.City, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(x => x.JobID, "Meslek Seçiniz", new { @class = "col-sm-3 col-form-label" })
                    <div class="col-sm-9">
                        @Html.DropDownListFor(x => x.JobID, (List<SelectListItem>)ViewBag.v, "Meslek Seçiniz", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.JobID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <br/>

                <div class="form-group row">
                    <div class="col-sm-9 offset-sm-3 text-center">
                        <button type="submit" class="btn btn-info">Müşteri Güncelle</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

