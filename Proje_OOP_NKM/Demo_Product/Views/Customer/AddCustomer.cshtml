@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center">Müşteri Ekle</h2>

            <form method="post">
                <div class="form-group">
                    @Html.LabelFor(x => x.Name, "Müşteri Adı", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Müşteri Adı" })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.City, "Müşteri Şehir", new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.City, new { @class = "form-control", placeholder = "Müşteri Şehir" })
                    @Html.ValidationMessageFor(x => x.City, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.JobID, "Meslek Seçiniz", new { @class = "form-label" })
                    @Html.DropDownListFor(x => x.JobID, (List<SelectListItem>)ViewBag.v, "Meslek Seçiniz", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.JobID, "", new { @class = "text-danger" })
                </div>

                <br/>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Müşteriyi Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>
