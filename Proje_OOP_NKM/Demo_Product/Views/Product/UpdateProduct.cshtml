@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<form method="post">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="text-center">Ürün Güncelle</h2>
                <div class="form-group">
                    @Html.LabelFor(x => x.Id, new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", placeholder = "Ürün ID" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Name, new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Ürün Adı" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Price, new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control", placeholder = "Ürün Fiyatı" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Stock, new { @class = "form-label" })
                    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control", placeholder = "Ürün Stok Sayısı" })
                </div>
                <br/>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-info">Ürün Güncelle</button>
                </div>
            </div>
        </div>
    </div>
</form>
